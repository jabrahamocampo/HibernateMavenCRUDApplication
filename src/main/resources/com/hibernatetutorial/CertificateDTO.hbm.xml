<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.hibernatetutorial.CertificateDTO" table="certificate">
		<meta attribute="class-description">
			This class contains the certificate records.
		</meta>
		
		<id name="id" type="int" column="id">
			<generator class="native"></generator>
		</id>
	
		<property name="cName" column="certificate_name" type="string" />
		<property name="empId" column="employee_id" type="int" />
		<property name="cType" column="certificate_type" type="string" />
	</class>
</hibernate-mapping>