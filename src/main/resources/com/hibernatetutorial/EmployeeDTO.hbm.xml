<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.hibernatetutorial.EmployeeDTO" table="employee">
		<meta attribute="class-description">
			This class contains employee details
		</meta>
		
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		
		<property name="fName" column="first_name" type="string"/>
		<property name="lName" column="last_name" type="string"/>
		<property name="salary" column="salary" type="int" />
		<property name="address" column="address" type="int" />
		
	</class>
	
</hibernate-mapping>